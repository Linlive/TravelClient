<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- 灰色阴影 -->
            <item
                android:left="4dp"
                android:top="10dp">
                <shape>
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="1dp" />
                </shape>
            </item>

            <item
                android:bottom="0dp"
                android:right="1dp"
                android:left="-5dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>