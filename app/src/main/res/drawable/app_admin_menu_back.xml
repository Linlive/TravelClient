<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/transparent" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient android:centerColor="@color/listview_gray"
                      android:endColor="@color/appSwitch"
                      android:startColor="@color/common_white"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#cf6ed4c7"
                android:endColor="#45ffffff"
                android:type="linear"
                />
        </shape>
    </item>

</selector>