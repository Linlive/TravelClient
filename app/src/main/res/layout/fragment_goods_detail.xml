<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GoodsDetailPublishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:background="@color/back_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/common_white"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/app_publish_goods_goods_name"
                android:background="@drawable/edit_border"
                android:layout_weight="1"
                android:hint="商品名称"
                android:paddingLeft="12dp"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/brand_linear">
                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:id="@+id/app_publish_brand_title_text"
                        android:text="@string/publishBrandText"
                        android:textColor="@color/textBlank"
                        />
                    <ImageView
                        android:id="@+id/app_publish_brand_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sort_right_enabled"
                        />
                    <TextView
                        style="@style/goodsPublishValueStyle"
                        android:id="@+id/app_publish_brand_value_text"
                        android:layout_toLeftOf="@id/app_publish_brand_image_view"
                        app:layout_widthPercent="45%"
                        />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/type_linear">
                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:text="@string/publishTypeText"
                        />
                    <ImageView
                        android:id="@+id/app_publish_type_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sort_right_enabled"
                        />
                    <TextView
                        style="@style/goodsPublishValueStyle"
                        android:id="@+id/app_publish_type_value_text"
                        android:layout_toLeftOf="@id/app_publish_type_image_view"
                        app:layout_widthPercent="45%"/>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/size_linear">

                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:id="@+id/app_publish_size_title"
                        android:text="@string/publishSizeText"
                        />
                    <ImageView
                        android:id="@+id/app_publish_size_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sort_right_enabled"
                        />
                    <TextView
                        android:id="@+id/app_publish_size_value_text"
                        style="@style/goodsPublishValueStyle"
                        android:layout_toLeftOf="@id/app_publish_size_image_view"
                        app:layout_widthPercent="45%"/>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/place_linear">

                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:text="@string/publishPlaceText"
                        />

                    <ImageView
                        android:id="@+id/app_publish_place_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sort_right_enabled"
                        />

                    <TextView
                        style="@style/goodsPublishValueStyle"
                        android:id="@+id/app_publish_place_value_text"
                        android:layout_toLeftOf="@id/app_publish_place_image_view"
                        app:layout_widthPercent="45%"/>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/color_linear">

                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:text="@string/publishColorText"
                        />

                    <ImageView
                        android:id="@+id/app_publish_color_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sort_right_enabled"
                        />

                    <TextView
                        style="@style/goodsPublishValueStyle"
                        android:id="@+id/app_publish_color_value_text"
                        android:layout_toLeftOf="@id/app_publish_color_image_view"
                        app:layout_widthPercent="45%"/>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/lineView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:text="@string/publishPriceText"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:id="@+id/app_publish_price_value_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:hint="￥"
                        app:layout_widthPercent="50%"
                        android:gravity="center_vertical|end"
                        android:background="@drawable/app_publish_detail_price_edit"
                        android:paddingRight="@dimen/x10"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:lines="1"
                        />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/goodsPublishTitleStyle"
                        android:text="@string/publishRepertoryText"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:id="@+id/app_publish_repertory_value_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:hint="件"
                        app:layout_widthPercent="50%"
                        android:gravity="center_vertical|end"
                        android:background="@drawable/app_publish_detail_price_edit"
                        android:paddingRight="@dimen/x10"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:lines="1"
                        />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/lineView"/>

        </LinearLayout>

        <EditText
            android:id="@+id/app_publish_goods_other_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/edit_border"
            android:gravity="start"
            android:hint="@string/goodsDetailsExtraInfo"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textCursorDrawable="@drawable/cursor_black"/>
    </LinearLayout>
</RelativeLayout>
