<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="10"

        >
        <ImageView
            android:id="@+id/app_index_goods_image_main"
            android:layout_width="0dp"
            android:layout_height="@dimen/y100"
            android:scaleType="centerCrop"
            android:layout_weight="7"
            />
        <!--app:layout_widthPercent="60%"-->
        <!--app:layout_heightPercent="40%"-->
        <View
            android:id="@+id/app_index_goods_middle_view"
            android:layout_width="1dp"
            android:layout_height="@dimen/y100"
            android:background="@color/lineView"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_weight="3"
            android:layout_marginLeft="1dp"
            android:paddingLeft="2dp"
            >
            <LinearLayout
                android:id="@+id/app_index_name_liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_index_goods_name_text"
                    style="@style/goodsTextTitleStyle"
                    android:text="@string/appIndexGoodsName"
                    android:textSize="16sp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/app_index_goods_name_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/appIndexGoodsName"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_index_price_liner"
                style="@style/appIndexGoodsNameInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_index_goods_price_text"
                    style="@style/goodsTextTitleStyle"
                    android:text="@string/appIndexGoodsSoldPrice"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/app_index_goods_price_text2"
                    style="@style/goodsTextStyle"
                    android:text="@string/appIndexGoodsPrice"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_index_repertory_liner"
                style="@style/appIndexGoodsNameInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_index_goods_repertory_text"
                    style="@style/goodsTextTitleStyle"
                    android:text="@string/appIndexGoodsRepertoryLeft"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/app_index_goods_repertory_text2"
                    style="@style/goodsTextStyle"
                    android:text="@string/appIndexGoodsRepertory"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_index_delivery_liner"
                style="@style/appIndexGoodsNameInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_index_goods_delivery_text"
                    style="@style/goodsTextTitleStyle"
                    android:text="@string/appIndexGoodsDelivery"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/app_index_goods_delivery_text2"
                    style="@style/goodsTextStyle"
                    android:text="@string/appIndexGoodsDelivery"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/app_index_goods_describe_text"
                style="@style/goodsTextStyle"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:text="JJHHdajksf"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>