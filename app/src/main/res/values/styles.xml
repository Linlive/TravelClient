<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="NoTitleFullscreen" parent="Theme.AppCompat">
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>

	<style name="customProgressBar">
		<item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

	<!--shopping cart-->
	<style name="checkBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
		<item name="android:button">@drawable/text_check_box_background</item>
	</style>
	<style name="shoppingCartCommonTextStyle">
		<item name="android:textColor">@color/textBlank</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="shoppingCartDetailTextStyle">
		<item name="android:textColor">@color/lineView</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>
