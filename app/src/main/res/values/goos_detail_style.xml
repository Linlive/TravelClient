<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="goodsPublishTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="goodsPublishSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">2sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="goodsEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:maxLength">200</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="goodsPublishTitleStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/textBlank</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="goodsPublishValueStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/textBlank</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>